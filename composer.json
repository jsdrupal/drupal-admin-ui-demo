{
    "name": "jsdrupal/drupal-admin-ui-demo",
    "description": "Project template for testing Drupal's React Admin user interface",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "ext-pdo_sqlite" : "*",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/core": "~8.6",
        "drupal/jsonapi": "1.13.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "justafish/drupal-admin-ui": "dev-master",
        "justafish/drupal-admin-ui-support": "dev-master"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "^8.0",
        "drush/drush": "^9.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "install": [
            "php docroot/core/scripts/drupal install standard --no-interaction",
            "vendor/bin/drush en -y jsonapi admin_ui_support"
        ],
        "start": [
            "cd docroot && php core/scripts/drupal server"
        ],
        "devify": [
            "rm -rf docroot/vfancy",
            "git clone https://github.com/jsdrupal/drupal-admin-ui docroot/vfancy",
            "cp docroot/vfancy/.env docroot/vfancy/.env.local",
            "cd docroot/vfancy && yarn install"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["library"],
        "installer-paths": {
            "docroot/vfancy": ["justafish/drupal-admin-ui"],
            "docroot/core": ["type:drupal-core"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset"
            ],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "enable-patching": true,
        "patches": {
            "drupal/core": {
                "Provide a single command to install & run Drupal": "https://www.drupal.org/files/issues/2018-04-11/2911319-2-191.patch"
            }
        }
    }
}
